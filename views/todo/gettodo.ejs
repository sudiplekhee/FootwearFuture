<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden mt-16">
        <div class="px-4 py-2">
            <h1 class="text-gray-800 font-bold text-2xl uppercase">To-Do List</h1>
        </div>
        <form class="w-full max-w-sm mx-auto px-4 py-2">
            <div class="flex items-center border-b-2 border-teal-500 py-2">
                <!-- Add input field here if needed -->
            </div>
        </form>
        <ul class="divide-y divide-gray-200 px-4">
            <% products.forEach(function(todo) { %>
                <li class="py-4">
                    <div class="flex items-center">
                        <input id="todo1" name="todo1" type="checkbox"
                            class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded">
                        <label for="todo1" class="ml-3 block text-gray-900">
                            <span class="text-lg font-medium"><%- todo.name %></span>
                              <span class="text-lg font-medium"><%- todo.name %></span>
                                <span class="text-lg font-medium"><%- todo.description%></span>
                                  <span class="text-lg font-medium"><%- todo.category %></span>
                                    <span class="text-lg font-medium"><%- todo.brand %></span>
                                      <span class="text-lg font-medium"><%- todo.price %></span>
                                        <span class="text-lg font-medium"><%- todo.discount %></span>
                        </label>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>
</body>

</html>
